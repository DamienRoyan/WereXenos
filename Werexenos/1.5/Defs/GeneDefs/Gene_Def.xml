<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	
	<!-- Size -->
	<GeneDef>
		<!-- Header -->
		<defName>ST_Smol</defName>
		<label>Smol body</label>
		<description>They smol</description>
		
		<displayCategory>Miscellaneous</displayCategory>
		<iconPath>UI/Icons/Genes/Size/Smol</iconPath>
		<selectionWeight>0</selectionWeight>
		<!-- Stats -->
		<biostatCpx>1</biostatCpx>
		<biostatMet>2</biostatMet>		
		<statFactors>
			<VEF_BodySize_Multiplier>0.75</VEF_BodySize_Multiplier>
			<VEF_CosmeticBodySize_Multiplier>0.75</VEF_CosmeticBodySize_Multiplier>
			<IncomingDamageFactor>1.15</IncomingDamageFactor>
		</statFactors>
		<statOffsets>
			<CarryingCapacity>-15</CarryingCapacity>
		</statOffsets>
		<!-- Incompatibilities -->
		<exclusionTags>
			<li>AG_BodySize</li>
			<li>Size</li>
		</exclusionTags>
	</GeneDef>
	
	<GeneDef>
		<!-- Header -->
		<defName>ST_Big</defName>
		<label>Big body</label>
		<description>They big</description>
		
		<displayCategory>Miscellaneous</displayCategory>
		<iconPath>UI/Icons/Genes/Size/Big</iconPath>
		<selectionWeight>0</selectionWeight>
		<!-- Stats -->
		<biostatCpx>1</biostatCpx>
		<biostatMet>-1</biostatMet>		
		<statFactors>
			<VEF_BodySize_Multiplier>1.25</VEF_BodySize_Multiplier>
			<VEF_CosmeticBodySize_Multiplier>1.25</VEF_CosmeticBodySize_Multiplier>
			<IncomingDamageFactor>0.85</IncomingDamageFactor>
		</statFactors>
		<statOffsets>
			<CarryingCapacity>20</CarryingCapacity>
		</statOffsets>
		<!-- Incompatibilities -->
		<exclusionTags>
			<li>AG_BodySize</li>
			<li>Size</li>
		</exclusionTags>
	</GeneDef>
	
	<GeneDef>
		<!-- Header -->
		<defName>ST_Huge</defName>
		<label>Huge body</label>
		<description>They huge. Maybe swol, maybe chonk.</description>
		
		<displayCategory>Miscellaneous</displayCategory>
		<iconPath>UI/Icons/Genes/Size/Huge</iconPath>
		<selectionWeight>0</selectionWeight>
		<!-- Stats -->
		<biostatCpx>1</biostatCpx>
		<biostatMet>-2</biostatMet>		
		<statFactors>
			<VEF_BodySize_Multiplier>1.5</VEF_BodySize_Multiplier>
			<VEF_CosmeticBodySize_Multiplier>1.5</VEF_CosmeticBodySize_Multiplier>
			<IncomingDamageFactor>0.75</IncomingDamageFactor>
		</statFactors>
		<statOffsets>
			<CarryingCapacity>35</CarryingCapacity>
		</statOffsets>
		<!-- Incompatibilities -->
		<exclusionTags>
			<li>AG_BodySize</li>
			<li>Size</li>
		</exclusionTags>
	</GeneDef>
	
	<!-- Age -->
	<GeneDef>
		<!-- Header -->
		<defName>ST_Fast_Aging</defName>
		<label>Fast Aging</label>
		<description>Carriers of this gene reach adulthood faster than others</description>
		
		<displayCategory>Miscellaneous</displayCategory>
		<iconPath>UI/Icons/Genes/Age/FastAging</iconPath>
		<selectionWeight>0</selectionWeight>
		<!-- Stats -->
		<displayOrderInCategory>51</displayOrderInCategory>
		<biostatCpx>3</biostatCpx>
		<biostatMet>-2</biostatMet>
		<biologicalAgeTickFactorFromAgeCurve>
			<points>
				<li>(0, 3.0)</li>
				<li>(7, 2.0)</li>
				<li>(13, 1.5)</li>
				<li>(18, 1.0)</li>
			</points>
		</biologicalAgeTickFactorFromAgeCurve>
		<!-- Incompatibilities -->
		<exclusionTags>
			<li>AG_Aging</li>
			<li>Aging</li>
			<li>Age</li>
		</exclusionTags>
	</GeneDef>

</Defs>